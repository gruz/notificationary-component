            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>notificationary.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
    </files>
    <media destination="com_notificationary" folder="media">
        <folder>js</folder>
        <folder>css</folder>
    </media>
    <languages folder="site/languages">
        
			<language tag="en-GB">en-GB/en-GB.com_notificationary.ini</language>
			<language tag="ru-RU">ru-RU/ru-RU.com_notificationary.ini</language>
			<language tag="uk-UA">uk-UA/uk-UA.com_notificationary.ini</language>
    </languages>
    <administration>
        <menu img="media/com_notificationary/images/s_com_notificationary.png" >COM_NOTIFICATIONARY</menu>
        <submenu>
            
			<menu link="option=com_notificationary&amp;view=rules" view="rules" img="media/com_notificationary/images/s_rules.png" alt="Notificationary/Rules">COM_NOTIFICATIONARY_TITLE_RULES</menu>

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>notificationary.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
